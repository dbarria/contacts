<%- model_class = Contact -%>
<!-- <div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div> -->
<% if @contacts.size != 0 %>

<div class="table-responsive">
  <table class="contactsTable table table-striped table-hover">
    <thead>
      <tr>

        <th><%= model_class.human_attribute_name(:name) %></th>
        <th class="visible-lg"><%= model_class.human_attribute_name(:line1) %></th>
        <th class="visible-lg"><%= model_class.human_attribute_name(:line2) %></th>
        <th class="visible-sm visible-md visible-lg"><%= model_class.human_attribute_name(:city) %></th>
        <th class="visible-md visible-lg"><%= model_class.human_attribute_name(:state) %></th>
        <th class="visible-lg"><%= model_class.human_attribute_name(:zip) %></th>
        <th ><%= model_class.human_attribute_name(:phone) %></th>
        <th class="visible-sm visible-md visible-lg"><%=t '.actions', default: t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody class="results">
    <% @contacts.each do |contact| %>
      <tr>
          <td><%= contact.name %></td>
          <td class="visible-lg"><%= contact.line1 %></td>
          <td class="visible-lg"><%= contact.line2 %></td>
          <td class="visible-sm visible-md visible-lg"><%= contact.city %></td>
          <td class="visible-md visible-lg"><%= contact.state %></td>
          <td class="visible-lg"><%= contact.zip %></td>
          <td><%= contact.phone %></td>
        <td class="visible-sm visible-md visible-lg">
          <%= link_to contact_path(contact), class: 'btn  btn btn-primary', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= t('.show', default: t('helpers.links.show')) %>
            <!-- <%= glyph 'info-sign' %> -->
          <%- end -%>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
<%= will_paginate @contacts, renderer: BootstrapPagination::Rails %>
