$(".sidebar > #pagination-list").remove()
<%if  !@contacts.empty? %>
  $("#contact_list .list-group").html("<%= escape_javascript(render 'contact_list') %>");
  if(!currentContactSelected){
    $("#contactbody").html("<%= escape_javascript(render 'show') %>");
    currentContactSelected = true;
  }
  if ($("#query").val() == ""){
    $("#query").val("<%= escape_javascript(params[:query])%>")
  }
  $("#pagination-list").detach().appendTo('.sidebar')
  $("#pagination-list").show();
<%else%>
  $("#contact_list .list-group").html("");
  $("#contactbody").html("");
  $("#contactbody").append($("#no-results").clone());
  $("#contactbody").find("#no-results").show();
  currentContactSelected = false;
<%end%>
