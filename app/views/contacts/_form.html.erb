<%= form_for @contact, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :line1, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :line1, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :line2, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :line2, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :city, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :state, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :zip, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  contacts_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
